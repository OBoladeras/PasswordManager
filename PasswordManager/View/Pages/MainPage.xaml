<UserControl x:Class="PasswordManager.View.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordManager.View.Pages"
             xmlns:userControls="clr-namespace:PasswordManager.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="505" d:DesignWidth="910">

    <Grid Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Menu -->
        <Grid Background="#1b1b1b">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <userControls:MenuItem VerticalAlignment="Top" HighLight="0"
                                   Text="Main" Margin="0, 10, 0, 0"/>

        </Grid>
            
    </Grid>
</UserControl>
