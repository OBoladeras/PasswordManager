<UserControl x:Class="PasswordManager.View.UserControls.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordManager.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="227.5">

    <UserControl.Resources>
        <FontFamily x:Key="NotoSerifMakasarFont">/PasswordManager;component/Fonts/NotoSerifMakasar.ttf#NotoSerifMakasar</FontFamily>
        <FontFamily x:Key="CaprasimoFont">/PasswordManager;component/Fonts/Caprasimo.ttf#Caprasimo</FontFamily>  
    </UserControl.Resources>

    <Grid MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Image Source="../../Images/key_icon.png" x:Name="imgIcon" Width="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                   Text="Site" FontSize="15" FontFamily="Quicksand Light" Foreground="White"
                   x:Name="txtBlock" FontWeight="Normal"/>

    </Grid>
</UserControl>
