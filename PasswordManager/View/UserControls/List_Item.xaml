<UserControl x:Class="PasswordManager.View.UserControls.List_Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordManager.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Ellipse x:Name="circle" Fill="{Binding Color}" Height="10" Width="10"/>
        <TextBlock x:Name="txtBox" Grid.Column="1" Text="{Binding Text}" VerticalAlignment="Center" Margin="5, 0, 0, 0"
                   FontSize="12" Foreground="{Binding Color}"/>
    </Grid>
</UserControl>
